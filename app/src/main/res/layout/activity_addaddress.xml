<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E6E6FA"
    android:layout_height="match_parent"
    tools:context="com.example.fascom.Addaddress">

    <include
        android:id="@+id/defapp"
        layout="@layout/defappbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotore"
        android:text="Add Address"
        android:textColor="#B0C4DE"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defapp"
        app:layout_constraintVertical_bias="0.054" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:background="@drawable/inputcolor"
        android:fontFamily="@font/robotore"
        android:hint="Name"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221" />

    <EditText
        android:id="@+id/call"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:background="@drawable/inputcolor"
        android:fontFamily="@font/robotore"
        android:hint="Mobile Number"
        android:paddingLeft="15dp"
        android:inputType="number"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332" />

    <EditText
        android:id="@+id/flatno"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:background="@drawable/inputcolor"
        android:fontFamily="@font/robotore"
        android:hint="Flat No."
        android:paddingLeft="15dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.432" />

    <EditText
        android:id="@+id/street"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:background="@drawable/inputcolor"
        android:fontFamily="@font/robotore"
        android:hint="Street lane/Colony"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534" />

    <EditText
        android:id="@+id/city"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:background="@drawable/inputcolor"
        android:fontFamily="@font/robotore"
        android:hint="City,State"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />

    <EditText
        android:id="@+id/zipcode"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:background="@drawable/inputcolor"
        android:fontFamily="@font/robotore"
        android:hint="Postal Code/Pin Code"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729" />

    <Button
        android:id="@+id/addaddress"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/logsignupbutt"
        android:elevation="2dp"
        android:fontFamily="@font/gilroybold"
        android:gravity="center"
        android:text="Add Address"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968" />
</androidx.constraintlayout.widget.ConstraintLayout>