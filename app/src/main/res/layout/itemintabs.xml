<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="15dp"
    app:cardElevation="5dp"
    android:padding="4dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="0"
                >
                <TextView
                    android:id="@+id/productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansre"
                    android:text="Amul Fresh Paneer"
                    android:layout_marginStart="5dp"
                    android:maxLength="30"
                    android:ellipsize="end"
                    android:ems="10"
                    android:singleLine="true"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

    <LinearLayout
            android:layout_width="wrap_content"
        android:layout_weight="1"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ourpri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansb"
                    android:layout_marginStart="5dp"
                    android:text="Rs"
                    android:textColor="@color/green"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansb"
                    android:layout_marginStart="2dp"
                    android:text="325"
                    android:textColor="@color/green"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/strike"
                    android:layout_marginStart="2dp"
                    android:text="425"
                    android:textSize="13sp"/>
                </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsre"
                    android:text=""
                    android:layout_marginStart="5dp"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansre"
                    android:layout_marginStart="2dp"
                    android:text="kg"
                    android:textSize="14dp" />

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

            <TextView
                android:id="@+id/descr"
                android:text="description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />


                    <ImageView
                        android:id="@+id/removing"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/remove"
                        app:tint="@color/pink" />

                <TextView
                    android:id="@+id/quanumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotob"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/adding"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/add"
                    android:layout_marginEnd="10dp"
                    app:tint="@color/pink" />

                    <TextView
                        android:id="@+id/stock"
                        android:text="available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        />

            <TextView
                android:id="@+id/addu"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:background="@drawable/button"
                android:backgroundTint="@color/pink"
                android:fontFamily="@font/gilroybold"
                android:text="ADD"
                android:textColor="@color/white"
                android:textSize="15dp" />
                </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
